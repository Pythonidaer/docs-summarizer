{
  "manifest_version": 3,
  "name": "Docs Summarizer POC",
  "version": "0.1.0",
  "description": "Proof-of-concept extension to summarize documentation pages.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Docs Summarizer"
  },
  "background": {
    "service_worker": "dist/extension/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/extension/content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["detached-window.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
