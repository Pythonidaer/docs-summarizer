{
  "manifest_version": 3,
  "name": "Docs Summarizer",
  "version": "1.0.0",
  "description": "AI-powered extension to summarize and explain documentation pages with customizable voice styles.",
  "author": "Jonathan Hammond",
  "icons": {
    "16": "icons/docs-summarizer-16.png",
    "48": "icons/docs-summarizer-48.png",
    "128": "icons/docs-summarizer-128.png"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "optional_permissions": ["bookmarks"],
  "host_permissions": [],
  "action": {
    "default_icon": {
      "16": "icons/docs-summarizer-16.png",
      "48": "icons/docs-summarizer-48.png",
      "128": "icons/docs-summarizer-128.png"
    },
    "default_title": "Docs Summarizer"
  },
  "background": {
    "service_worker": "dist/extension/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["detached-window.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
